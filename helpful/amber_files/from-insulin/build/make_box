#!/bin/bash

echo   	"tolerance 2.0 # tolerance distance
output packmol_out.pdb # output file name
filetype pdb # output file type
add_amber_ter

structure <1>.pdb
number 8 # Number of molecules
inside cube 0. 0. 0. 30. # x, y, z coordinates of box, and length of box in Angstroms
end structure
# cho
structure <2>.pdb
number 8
inside cube 0. 0. 0. 30.
end structure

structure <3>.pdb
number 8
inside cube 0. 0. 0. 30.
end structure" > ~/tools/packmol/packmol-20.2.2/packmol

